<!DOCTYPE html>
<html>
  <head>
    <title>FastFoodAppliation</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<% if current_user %>

  Signed in as <%= current_user.name %> | <%= link_to "Logout", '/logout' %>
   <%= link_to 'Go to home page', "/homepage/index" , class: "btn btn-primary" %>
   <%= link_to 'Go to log in page', "/" , class: "btn btn-primary" %>
<% else %>
  <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
   <%= link_to 'Go to log in page', "/" , class: "btn btn-primary" %>
<% end %>
    <%= yield %>
  </body>
</html>
