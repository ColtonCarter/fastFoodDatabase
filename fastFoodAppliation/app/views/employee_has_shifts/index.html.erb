<h1>Employee Has Shifts</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Shift</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_has_shifts.each do |employee_has_shift| %>
      <tr>
        <td><%= employee_has_shift.employee_id %></td>
        <td><%= employee_has_shift.shift_id %></td>
        <td><%= link_to 'Show', employee_has_shift %></td>
        <td><%= link_to 'Edit', edit_employee_has_shift_path(employee_has_shift) %></td>
        <td><%= link_to 'Destroy', employee_has_shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

